{
  "name": "nekofar/nobitex",
  "type": "library",
  "description": "PHP wrapper for the Nobitex API",
  "keywords": [
    "nekofar",
    "nobitex",
    "api",
    "crypto",
    "bitcoin"
  ],
  "homepage": "https://github.com/nekofar/nobitex-api-php",
  "license": "MIT",
  "authors": [
    {
      "name": "Milad Nekofar",
      "email": "milad@nekofar.com"
    }
  ],
  "require": {
    "php": "^7.3 || ^8.0",
    "ext-json": "*",
    "netresearch/jsonmapper": "^4.0",
    "php-http/client-implementation": "^1.0",
    "php-http/discovery": "^1.14",
    "php-http/httplug": "^2.0",
    "php-http/message": "^1.12",
    "php-http/message-factory": "^1.0",
    "psr/http-message": "^1.0"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7.1",
    "escapestudios/symfony2-coding-standard": "^3.12",
    "guzzlehttp/psr7": "^2.0",
    "jchook/phpunit-assert-throws": "^1.0",
    "pestphp/pest": "^1.18",
    "php-http/curl-client": "^2.0",
    "php-http/mock-client": "^1.0",
    "phpcompatibility/php-compatibility": "^9.2",
    "phpstan/phpstan": "^0.12.99",
    "phpstan/phpstan-phpunit": "^0.12.22",
    "phpstan/phpstan-strict-rules": "^0.12.11",
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "^3.6"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0.x-dev"
    }
  },
  "autoload": {
    "psr-4": {
      "Nekofar\\Nobitex\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Nekofar\\Nobitex\\": "tests/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "phpcs": "vendor/bin/phpcs",
    "test": "vendor/bin/phpunit",
    "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
  },
  "support": {
    "issues": "https://github.com/nekofar/nobitex-api-php/issues"
  }
}
